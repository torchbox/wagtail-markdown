{
    "files.exclude": {
        "**/*.egg-info": true,
        "**/__pycache__": true
    },
    "python.formatting.autopep8Args": [
        "--max-line-length=120"
    ],
    "autoDocstring.docstringFormat": "numpy",
    "autoDocstring.startOnNewLine": true,
    "beautify.language": {
        "html": [
            "htm", "html", "django-html"
        ]
    },
    "editor.codeActionsOnSave": {
        "source.fixAll.markdownlint": true
    },
    "markdownlint.config":{
        "MD013": { "line_length": 120 },
        "MD007": { "indent": 2 }
    }
}